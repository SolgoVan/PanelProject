{% extends 'fdo/index.html.twig' %}

{% block title %}Effectif{% endblock %}

{% block content %}
    <div class="container">
        <br>
        <h1>Effectif</h1>
        <hr>
        <table class="table table-primary table-striped table-bordered border-primary">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Numéro de téléphone</th>
                <th scope="col">Grade</th>
            </tr>
            </thead>
            <tboby>
                {% for citoyen in effectif %}
                    <tr>
                        <td>{{ citoyen.nom | upper  }}</td>
                        <td>{{ citoyen.prenom | capitalize }}</td>
                        <td>{{ citoyen.telephone  }}</td>
                        <td>{{ citoyen.profession | capitalize }}</td>
                    </tr>
                {% endfor %}
            </tboby>
        </table>
    </div>
{% endblock %}
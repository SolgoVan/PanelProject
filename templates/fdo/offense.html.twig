{% extends 'fdo/index.html.twig' %}

{% block title %}Liste des infractions{% endblock %}

{% block content %}
    <br>
    <div class="container">
        <h1>Listes des infractions</h1>
        <section class="series-list">
            <br>
            <hr>
            <table class="table table-primary table-striped table-bordered border-primary">
                <thead>
                    <tr>
                        <th scope="col">Catégorie</th>
                        <th scope="col">Montant</th>
                        <th scope="col">Déscription</th>
                        {% if (app.user.level > 2) %}
                            <th scope="col">Option</th>
                        {% endif %}
                    </tr>
                </thead>
                <tboby>
                    {% for offense in offenses %}
                        <tr>
                            <td>{{ offense.category }}</td>
                            <td>{{ offense.montant }} $</td>
                            <td>{{ offense.label }} </td>

                                {% if (app.user.level > 2) %}
                                    <td><a class="text-decoration-none" href="#">✎</a></td>
                                {% endif %}
                        </tr>
                    {% endfor %}
                </tboby>
            </table>
            <br>
            <div class="pagination">
                {{ knp_pagination_render(offenses) }}
            </div>
        </section>
    </div>

{% endblock %}
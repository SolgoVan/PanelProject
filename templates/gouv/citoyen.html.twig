{% extends 'gouv/index.html.twig' %}

{% block title %}Liste des citoyens{% endblock %}

{% block content %}
    <br>
    <div class="container">
        <h1>Listes des citoyens</h1>
        <section>
            <br>
            <hr>
            <table class="table table-warning table-striped table-bordered border-warning">
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Date de naissance</th>
                    <th scope="col">Numéro de téléphone</th>
                    <th scope="col">Profession</th>
                </tr>
                </thead>
                <tboby>
                    {% for citoyen in citoyens %}
                        <tr>
                            <td>{{ citoyen.nom | upper  }}</td>
                            <td>{{ citoyen.prenom | capitalize }}</td>
                            <td>{{ citoyen.dateNaissance | date('d-m-Y') }}</td>
                            <td>{{ citoyen.telephone }}</td>
                            <td>{{ citoyen.profession | capitalize }}</td>
                        </tr>
                    {% endfor %}
                </tboby>
            </table>
            <br>
            <div class="pagination">
                {{ knp_pagination_render(citoyens) }}
            </div>
        </section>
    </div>

{% endblock %}